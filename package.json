{
  "name": "markd",
  "version": "1.0.0",
  "description": "Bookmarks !",
  "authors": [
    "Gabe Dunn <gabe.dunn@shaw.ca>"
  ],
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "test:ci": "yarn test:unit",
    "prebuild": "yarn lint",
    "serve:dev": "nodemon bin/markd --ignore src/ --ignore build/",
    "start": "npm-run-all --parallel build serve",
    "mkenv": "envup",
    "preversion": "git pull && npm up && yarn lint",
    "version": "yarn build && git add -A .",
    "postversion": "git push --tags origin HEAD"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "debug": "^3.0.1",
    "dexie": "^1.5.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "morgan": "^1.8.2",
    "reset-css": "^4.0.1",
    "serve-favicon": "^2.4.3",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.1",
    "@vue/cli-plugin-eslint": "^3.0.1",
    "@vue/cli-plugin-unit-jest": "^3.0.1",
    "@vue/cli-service": "^3.0.1",
    "@vue/eslint-config-prettier": "^3.0.5",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.2.2",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.1",
    "vue-template-compiler": "^2.5.17"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
