{
  "name": "markd",
  "version": "1.0.0",
  "description": "Bookmarks !",
  "authors": [
    "Gabe Dunn <gabe.dunn@shaw.ca>"
  ],
  "license": "MIT",
  "scripts": {
    "prebuild": "yarn lint --silent",
    "build": "node build/build.js",
    "dev": "node build/dev-server.js",
    "serve": "node bin/markd",
    "serve:dev": "nodemon bin/markd --ignore src/ --ignore build/",
    "start": "npm-run-all --parallel build serve",
    "lint": "eslint --ext .js,.vue src",
    "mkenv": "cp .env_template .env",
    "preversion": "git pull && npm up && yarn std --silent",
    "version": "yarn build && git add -A .",
    "postversion": "git push --tags origin HEAD",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "dependencies": {
    "axios": "latest",
    "body-parser": "latest",
    "cookie-parser": "latest",
    "debug": "latest",
    "dotenv": "latest",
    "element-ui": "latest",
    "morgan": "latest",
    "node-sass": "latest",
    "pug": "latest",
    "request": "latest",
    "serve-favicon": "latest",
    "vue": "latest"
  },
  "devDependencies": {
    "autoprefixer": "latest",
    "ava": "^0.22.0",
    "babel-core": "latest",
    "babel-eslint": "latest",
    "babel-loader": "latest",
    "babel-plugin-component": "latest",
    "babel-plugin-transform-runtime": "latest",
    "babel-preset-env": "latest",
    "babel-register": "latest",
    "chalk": "latest",
    "connect-history-api-fallback": "latest",
    "copy-webpack-plugin": "latest",
    "css-loader": "latest",
    "eslint": "latest",
    "eslint-config-standard": "latest",
    "eslint-friendly-formatter": "latest",
    "eslint-loader": "latest",
    "eslint-plugin-html": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-node": "latest",
    "eslint-plugin-promise": "latest",
    "eslint-plugin-standard": "latest",
    "eventsource-polyfill": "latest",
    "express": "latest",
    "extract-text-webpack-plugin": "latest",
    "file-loader": "latest",
    "friendly-errors-webpack-plugin": "latest",
    "html-webpack-plugin": "latest",
    "http-proxy-middleware": "latest",
    "nodemon": "latest",
    "npm-run-all": "latest",
    "nyc": "latest",
    "opn": "latest",
    "optimize-css-assets-webpack-plugin": "latest",
    "ora": "latest",
    "postcss": "latest",
    "postcss-cssnext": "latest",
    "rimraf": "latest",
    "sass-loader": "latest",
    "semver": "latest",
    "shelljs": "latest",
    "url-loader": "latest",
    "vue-loader": "latest",
    "vue-style-loader": "latest",
    "vue-template-compiler": "latest",
    "webpack": "latest",
    "webpack-bundle-analyzer": "latest",
    "webpack-dev-middleware": "latest",
    "webpack-hot-middleware": "latest",
    "webpack-merge": "latest"
  },
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "ava": {
    "files": [
      "tests/**/*.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "match": [],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": true,
    "powerAssert": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
